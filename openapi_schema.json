{
  "openapi": "3.1.0",
  "info": {
    "title": "CFB Dual API",
    "version": "1.0.0",
    "description": "API for College Football Dual Model"
  },
  "servers": [
    {
      "url": "https://cfbdual2.onrender.com"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Root",
        "operationId": "root_get",
        "responses": {
          "200": {
            "description": "Root endpoint",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" }
                  }
                },
                "example": { "message": "CFB Dual API is running!" }
              }
            }
          }
        }
      }
    },
    "/games": {
      "get": {
        "summary": "Get games for a team",
        "operationId": "games_get",
        "parameters": [
          {
            "name": "team",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "year",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 2025 }
          }
        ],
        "responses": {
          "200": {
            "description": "Games list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "games": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                },
                "example": { "games": ["Game1", "Game2"] }
              }
            }
          }
        }
      }
    },
    "/predict": {
      "get": {
        "summary": "Run prediction",
        "operationId": "predict_get",
        "parameters": [
          {
            "name": "model",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "conservative" }
          },
          {
            "name": "year",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 2025 }
          }
        ],
        "responses": {
          "200": {
            "description": "Prediction output",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "model_used": { "type": "string" },
                    "year": { "type": "integer" },
                    "prediction": { "type": "string" }
                  }
                },
                "example": {
                  "model_used": "conservative",
                  "year": 2025,
                  "prediction": "This is a stub prediction."
                }
              }
            }
          }
        }
      }
    }
  }
}
